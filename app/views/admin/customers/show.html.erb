<div class="container mt-3">
    <div class="row">
        <h3 class="p-2 bg-dark text-light">
            <span class="header">
                <%= @customer.name %>
                さんの会員詳細会員詳細
            </span>
        </h3>
    </div>
    <div class="form-group row">
        <div class="col-2">会員ID</div>
        <div class="col-5"><%= @customer.id %></div>
    </div>
    <div class="form-group row">
        <div class="col-2">ログインID</div>
        <div class="col-5">
            <%= @customer.name %>
        </div>
    </div>
    <div class="form-group row">
        <div class="col-2">名前</div>
        <div class="col-5"><%= @customer.nickname %></div>
    </div>
    <div class="form-group row">
        <div class="col-2">メールアドレス</div>
        <div class="col-5"><%= @customer.email %></div>
    </div>
    <div class="form-group row">
        <div class="col-2">会員ステータス</div>
        <div class="col-5">
            <% if @customer.is_deleted == false %>
                有効
            <% else %>
                退会
             <% end %>
        </div>
    </div>
    <%= link_to "編集する", edit_admin_customer_path, class: 'btn btn-info ml-5' %>
</div>