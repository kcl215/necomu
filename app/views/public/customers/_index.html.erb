<table>
  <thead>
    <tr>
      <th>プロフィール写真</th>
      <th>名前</th>
      <th>ID</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% customers.each do |customer| %>
      <tr>
        <td>
          <%= link_to customer_path(customer) do %>
            <% if customer.profile_image.attached? %>
              <%= image_tag customer.profile_image, class: "profile_image", size: "100x100" %>
            <% else %>
              <%= image_tag 'no-image.png', size: "100x100", class: 'profile_image' %>
            <% end %>
        <% end %></td>
        <td><%= customer.nickname %></td>
        <td><%= customer.name %></td>
      </tr>
    <% end %>
  </tbody>
</table>
