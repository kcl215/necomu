<table>
  <thead>
    <tr>
      <th>プロフィール写真</th>
      <th>名前</th>
      <th>ID</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% customers.each do |customer| %>
      <tr>
        <td><%= link_to customer_path(customer) do %>
          <%= image_tag customer.profile_image, class: "profile_image", size: "100x100" %>
        <% end %></td>
        <td><%= customer.nickname %></td>
        <td><%= customer.name %></td>
      </tr>
    <% end %>
  </tbody>
</table>
