<div class = "container mt-5">
  <div class = "row">
    <div class = "col-3">
        <% if @customer.profile_image.attached? %>
          <%= image_tag @customer.profile_image, size:'150x150', class: 'profile_image' %>
        <% else %>
          <%= image_tag 'no-image', size: "150x150" %>
        <% end %>
    </div>

    <div class = "col-8 offset-1 mt-5">
      <section>
        <h5>ユーザープロフィール</h5>
      </section>

    <div>名前：<%= current_customer.nickname %>
      <% if current_customer != @customer %>
        <%= render "public/relationships/btn", customer: @customer %>
      <% else %>
        <%= link_to edit_customer_path(@customer), class: "btn btn-secondary ml-5" do %>
          プロフィール編集 <i class="fas fa-user-cog"></i>
        <% end %>
      <% end %>
    </div>
      <div class="mb-3">ID：<%= current_customer.name %></div>
      <div class="mb-3">
        <span>投稿数：</span><span class="font-ex"><%= @customer.posts.count %></span>
        <span>フォロワー：</span><span class="font-ex"><%= link_to @customer.followings.count, customer_followings_path(@customer) %></span>
        <span>フォロー：</span><span class="font-ex"><%= link_to @customer.followers.count, customer_followers_path(@customer) %></span>
      </div>
      <div class="mb-3">自己紹介</div>
      <div><%= @customer.introduction %></div>
    </div>
  </div>
</div>
<p><%=link_to"お気に入り記事",favorites_customer_path(@customer) %></p>


<!--飼猫一覧-->
<%= link_to "cat regist", new_cat_path, class: 'btn btn-secondary' %>
<div class="row">
  <% @cats.each do |cat| %>
    <%= link_to cat_path(cat) do %>
      <%= image_tag cat.cat_image, size: '200x200', class: 'cat_image' %>
    <% end %>
  <% end %>
</div>

<!--投稿一覧-->
<div class='container'>
  <div class ="wrapper grid" >
  <% @posts.each do |post| %>
    <div class="card" style="width: 15rem;">
    <%= link_to post_path(post) do %>
      <div class="card-img-top"><%= image_tag post.image, size: '238x238' %></div>
    <% end %>
    <div class="card-text"><%= post.caption %></div>
    </div>
  <% end %>
  </div>
</div>
