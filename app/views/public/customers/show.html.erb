<header>
	<div class="container">
		<div class="profile">
			<div class="profile-image">
				<% if @customer.profile_image.attached? %>
          <%= image_tag @customer.profile_image, size:'150x150', class: 'profile_image' %>
        <% else %>
          <%= image_tag 'no-image', size: "150x150" %>
        <% end %>
			</div>
			<div class="profile-user-settings">
				<h1 class="profile-user-name"><%= current_customer.name %></h1>
          <% if current_customer != @customer %>
            <%= render "public/relationships/btn", customer: @customer %>
          <% else %>
            <%= link_to edit_customer_path(@customer), class: "btn profile-edit-btn" do %>
              プロフィール編集 <i class="btn profile-settings-btn fas fa-user-cog"></i>
            <% end %>
          <% end %>
			</div>
			<div class="profile-stats">
				<ul>
					<li><span class="profile-stat-count"><%= @customer.posts.count %></span> posts</li>
					<li><span class="profile-stat-count"><%= link_to @customer.followings.count, customer_followings_path(@customer) %></span> followers</li>
					<li><span class="profile-stat-count"><%= link_to @customer.followers.count, customer_followers_path(@customer) %></span> following</li>
					<li><span class="profile-stat-count"><%=link_to"bookmark",favorites_customer_path(@customer) %></span></li>
				</ul>
			</div>
			<div class="profile-bio">
				<p><div class="profile-real-name"><%= current_customer.nickname %></div><%= @customer.introduction %>️</p>
			</div>
		</div>
	</div>
</header>
<header>
<div class="container">
  <div class="profile">
    <div class="profile_image">
      <% @cats.each do |cat| %>
        <%= link_to cat_path(cat) do %>
          <%= image_tag cat.cat_image, size:'150x150', class: 'profile_image' %>
        <% end %>
      <% end %>
    </div>
  </div>
</div>
</header>



<main>
	<div class="container">
		<div class="gallery">
			<% @posts.each do |post| %>
        <div class="gallery-item" tabindex="0">
          <%= link_to post_path(post) do %>
            <div class="gallery-image"><%= image_tag post.image, size: '285x285' %>
              <div class="gallery-item-info">
                <ul>
                    <li class="gallery-item-likes text-light">
                      <span class="visually-hidden">Likes:</span>
                      <i class="fas fa-heart" aria-hidden="true" style="color: white;"></i><%= post.favorites.count %>
                    </li>
                    <li class="gallery-item-comments text-light">
                      <span class="visually-hidden">Comments:</span>
                      <i class="fas fa-comment" aria-hidden="true" style="color: white;"></i><%= post.comments.count %>
                    </li>
                </ul>
              </div>
            </div>
          <% end %>
        </div>
      <% end %>
			</div>
		</div>
</main>

