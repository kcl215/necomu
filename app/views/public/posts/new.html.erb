<h1>Public::Posts#new</h1>
<p>Find me in app/views/public/posts/new.html.erb</p>
<div class="container">
  <%= form_with model: @post, local: true do |f| %>

    <div class="row">
      <%= f.label :写真 %>
      <%= f.file_field :image, class: 'form_control', accept: 'image/*'  %>
    </div>
  
    <div class="row">
      <%= f.label :投稿文 %>
      <%= f.text_area :caption, class: 'form_control caption' %>
    </div>
  
    <%= f.submit "登録", class: 'btn btn-primary' %>
  <% end %>
</div>