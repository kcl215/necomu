<h2>Results index</h2>

<table class="table table-hover table-inverse">
    <tbody>
      <% @customers.each do |customer| %>
        <tr>
          <td>
            <%= link_to customer_path(customer) do %>
              <%= customer.name %>
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
    <div class="row justify-content-center">
      <%= paginate @customers %>
    </div>
</table>